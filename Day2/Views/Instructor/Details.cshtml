@model Day2.ViewModel.Instructor_Course_DepartmentViewModel;
@{
    ViewData["Title"] = "Details";
    Layout = "_ProfileLayout";
}

<div class="col-lg-5">
    <img class="img-fluid rounded mb-4 mb-lg-0" src="/Images/@Model.instructor_image" alt="">
</div>
<div class="col-lg-7">
    <div class="text-left mb-4">
        <h1>@Model.instructor_name</h1>
        <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;"> @Model.instructor_Address</h5>
        
    </div>
    <p>
        <ul>
            <li>Course : @Model.course.Name</li>
            <li>department Name : @Model.dep.Name</li>
        </ul>
    </p>
    <a href="/instructor/index" class="btn btn-primary py-md-2 px-md-4 font-weight-semi-bold mt-2">Home</a>
</div>

  