@model Instructor
@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Edit";
}



<h2 class="text-primary text-uppercase mb-3 d-flex justify-content-center" style="letter-spacing: 5px;"><i class="fas fa-chalkboard-teacher"></i>Edit Instructor</h2>

<form method="post"  enctype="multipart/form-data">
    @* asp-action="New" asp-controller="Employee" asp-route-id="@Model.Id">*@
    <div class="form-group">
        <label>Instructor Name</label>
        <input type="text" name="Name" id="Name" value="@Model?.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Course Name</label>
        <select name="courseId" id="courseId" class="form-control">
            @foreach (Course cItem in ViewBag.Clist)
            {
                if (cItem.Id == Model.courseId)
                {
                    <option value="@cItem.Id" selected>@cItem.Name</option>
                }
                else
                {
                    <option value="@cItem.Id">@cItem.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>Address </label>
        <input type="text" name="address" id="address" value="@Model?.address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Salary </label>
        <input type="number" name="salary" id="salary" value="@Model?.salary" class="form-control" />
    </div>
    <div class="form-group">
        <label>Department </label>
        <select name="departmentId" id="departmentId" class="form-control">
            @foreach (Department dItem in ViewBag.Dlist)
            {
                if (dItem.Id == Model.departmentId)
                {
                    <option value="@dItem.Id" selected>@dItem.Name</option>
                }
                else
                {
                    <option value="@dItem.Id">@dItem.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="imageUpload">Upload Image:</label>
        <input type="file" class="form-control" id="Image" name="Image" accept=".jpg,.png,image/*">
        <p class="form-text ps-5 text-decoration-underline" id="Path_Img">@Model.Image</p>

    </div>
    <div div class="form-group d-flex justify-content-center">
        <input type="submit" value="Update" class="btn btn-primary mt-4 " />
    </div>
    </form>
<br /><br />
<a asp-action="Index" class="d-flex justify-content-center">Back To List</a>

    <!-------------Js VAlidation Client side Library--------------->
@section Scripts{
    <script>
        document.getElementById('Image').addEventListener('change', handleFileSelect, false);

        function handleFileSelect(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                document.getElementById('Path_Img').innerHTML = input.files[0].name;
            }

        }
    </script>
}